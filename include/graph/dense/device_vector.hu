#pragma once

template<typename T>
class DeviceVector {
private:
    T *data_;
    size_t capacity_;
    size_t size_;

public:
    __device__ __host__ inline size_t size() const noexcept {
        return size_;
    }

    __device__ __host__ inline T* data() noexcept {
        return data_;
    }

    __device__ __host__ inline const T* data() const noexcept {
        return data_;
    }
};
